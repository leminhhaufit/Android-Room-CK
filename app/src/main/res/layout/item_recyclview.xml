<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFBBEC">

    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="140dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="14dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="379dp"
            android:layout_height="141dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/lbTen"
                android:layout_width="109dp"
                android:layout_height="29dp"
                android:layout_marginStart="58dp"
                android:layout_marginBottom="61dp"
                android:gravity="center"
                android:text="Báo loại 1"
                android:textColor="#0093E9"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgHinh"
                app:layout_constraintStart_toEndOf="@+id/imgHinh"
                app:layout_constraintTop_toTopOf="@+id/imgHinh" />

            <TextView
                android:id="@+id/lbGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="44dp"
                android:text="10$"
                android:textColor="#0093E9"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/lbTen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/lbTen" />

            <ImageView
                android:id="@+id/btnSua"
                android:layout_width="66dp"
                android:layout_height="56dp"
                android:layout_marginEnd="44dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnXoa"
                app:layout_constraintEnd_toStartOf="@+id/btnXoa"
                app:layout_constraintStart_toStartOf="@+id/lbTen"
                app:layout_constraintTop_toTopOf="@+id/btnXoa"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

            <ImageView
                android:id="@+id/btnXoa"
                android:layout_width="61dp"
                android:layout_height="55dp"
                android:layout_marginTop="21dp"
                app:layout_constraintEnd_toEndOf="@+id/lbGia"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/lbGia"
                app:layout_constraintTop_toBottomOf="@+id/lbGia"
                app:srcCompat="@drawable/ic_baseline_delete_forever_24" />

            <ImageView
                android:id="@+id/imgHinh"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="27dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baoloai" />

            <ImageView
                android:id="@+id/btnDetail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/imgHinh"
                app:layout_constraintEnd_toStartOf="@+id/lbTen"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_new_releases_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>